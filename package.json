{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "MERN Chat App",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",         
    "server": "nodemon backend/server.js",     
    "client": "npm start --prefix frontend",   
    "dev": "concurrently \"npm run server\" \"npm run client\"", 
    "build": "npm install --prefix frontend && npm run build --prefix frontend"
  },
  "keywords": [
    "mern",
    "chat-app"
  ],
  "author": "Roshani Yadav",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.9",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "concurrently": "^8.2.2"
  }
}
